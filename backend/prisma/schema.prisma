generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDIENTE
  EN_CURSO
  FINALIZADO
}



model User {
  id           Int    @id @default(autoincrement())
  email        String @unique
  passwordHash String
  tasks        Task[]
}

model Task {
  id     Int    @id @default(autoincrement())
  title  String
  status Status @default(PENDIENTE)
  userId Int
  user   User   @relation(fields: [userId], references: [id])

  @@unique([userId, title])
}
